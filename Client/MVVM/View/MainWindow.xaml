<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Background="DeepPink">
                <Button Name="ConnectBtn" Background="Transparent" Content="Connect" FontSize="19" Command="{Binding ConnectCommand}" Width="300" Height="30"></Button>
                <Button Name="DisconnectBtn" Background="Transparent" Content="Disconnect" FontSize="19" Command="{Binding DisconnectBtn}" Width="300" Height="30"></Button>
                
                <TextBox Name="UsernameTxtBox" Background="White" BorderBrush="Black" BorderThickness="5" Foreground="Black" FontSize="19" Width="190" Height="30"></TextBox>
            </StackPanel>
            <StackPanel>
                
            </StackPanel>
            <Button Command="{Binding SelectCommand}" Width="200" Height="40" Background="DeepPink" Content="Select File" FontSize="22" Margin="0,330,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>
